<h1>Create Post</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
<div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title" id="title" value={{post.title}}>
</div>
<div class="form-group">
    <label for="Status">Visibility</label>
    <select name="status" id="status" class="form-control">
        {{#select post.status}}
        <option value="Public">Public</option>
        <option value="Private">Private</option>
        <option value="Draft">Draft</option>
        {{/select}}
    </select>
</div>
<div class="form-group">
    <label for="title">Category</label>
    <select name="status" id="status" class="form-control">
        {{#select categories}}
        <option value="id">{{title}}</option>
        {{/select}}
    </select>
</div>
<div class="form-check">
    <label for="allowComments">Allow Comments?</label>
    <input type="checkbox" name="allowComments" {{#if post.allowComments}} checked="checked" {{/if}} class="form-check-inline" id="allowComments">
</div>

<div class="form-group">
  <label for="picture">Add attachments</label>
  <input type="file" class="form-control-file" name="picture" id="picture" placeholder="" aria-describedby="fileHelpId">
  <small id="fileHelpId" class="form-text text-muted">.jpg, .png, .gif, .bmp files supported.</small>
</div>


<div class="form-check">
    <label for="body">Body</label>
    <textarea name = "body" class="form-control" id="body" placeholder="Enter Description" cols="30" rows="10">{{post.body}}</textarea>
</div>
<button type="submit" class="btn btn-primary">Submit</button>
</form>