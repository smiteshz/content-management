<div class="row">
    <div class="col-sm-4"><h1>Edit Category</h1>
        <form action="/admin/categories/{{category.id}}?_method=PUT" method="POST">
        <div class="form-group">
          <label for="Title">Category Name</label>
          <input type="text" class="form-control" name="Title" id="Title" aria-describedby="helpId" value="{{category.title}}">
          <small id="helpId" class="form-text text-muted">Enter more than 8 characters</small>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Update Category</button>
        </div>
        </form>
    </div>
</div>