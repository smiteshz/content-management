    <script>
      $("[name='approveComment']").bootstrapSwitch();
      $("[name='allowComments']").bootstrapSwitch();
      
      $(document).ready(() => {
        $("[name='approveComment']").on('switchChange.bootstrapSwitch', function(e, data){
          const id = $(this).attr('data-id');
          $.ajax({
            type:"POST",
            url: '/admin/comments/approve-comment',
            data: {id: id, approveComment: data},
            cache: false,
            success: function(data) {
              console.log(data.value);
              if (data.value === 'true'){
                toastr.success('Comment Approved');
              }
              else{
                toastr.warning('Comment Disapproved');
              }
              
            }
          })
        });
      });
    </script>